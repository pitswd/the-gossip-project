<center>

<h1>Bienvenue sur The Gossip Project</h1>
<% Gossip.all.each do |gossip| %>

 <div class="card" style="width: 18rem;">
  <div class="card-body"> 
    <h5 class="card-title"><%= gossip.title %></h5>
    <h6 class="card-subtitle mb-2 text-muted"><%= gossip.user.first_name %></h6>
    <p class="card-text"><%= gossip.content %> </p>
    <a href="/gossips/<%= gossip.id %>/" class="card-link">Lien vers le gossip</a>
    <a href="/users/<%=gossip.user_id %>/" class="card-link">L'auteur</a>
  </div>
</div>

<% end %>
</center>